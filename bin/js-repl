#!/usr/bin/env node
// ----------------------------------------------------------------------------
// Node.js repl
// ----------------------------------------------------------------------------

const term = {
  reset:   "\u001b[0m",
  bold:    "\u001b[1m",
  dim:     "\u001b[2m",
  unbold:  "\u001b[21m",
  undim:   "\u001b[22m",
  red:     "\u001b[31m",
  green:   "\u001b[32m",
  yellow:  "\u001b[33m",
  blue:    "\u001b[34m",
  pink:    "\u001b[35m",
  cyan:    "\u001b[36m",
}

var repl = require('repl')

var context = repl.start({
  prompt: (`${term.dim}(${term.undim}` +
           'node' +
           `${term.dim})${term.undim}` +
           `${term.blue}>${term.reset} `),
}).context

context.util = require('util')
context.termEscape = term
