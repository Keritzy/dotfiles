cache=8192                      # 8 MB
ao='sdl,alsa,'                  # audio output
vo='xv,'                        # video output
vf='screenshot'                 # video filters
geometry=100%:0%                # move window to top-right corner
monitoraspect=16:10             # using a widescreen monitor
quiet=yes                       # minimal output

sub-fuzziness=1                 # load subs containing the movie name
ass=yes                         # libass subtitle rendering
utf8=yes
subfont-encoding=unicode
embeddedfonts=yes
font='Negotiate Free'           # osd font
ass-force-style='Fontname=Negotiate Free,Default.Bold=1'
ffactor=2.5                     # narrow font outline
subfont-blur=2.5
subfont-outline=2.5
subpos=100                      # align to bottom of screen
subalign=2                      # align with bottom edge of subtitles

[anime]
alang='ja,jpn,'
slang='en,eng,'
#vf='screenshot,expand=:-50::25'
ass-top-margin=25
ass-bottom-margin=25
ass-use-margins=yes

[stream]
cache=100                       # cache less when streaming

[grain]
vf='noise=20ah:10ap'

[fast]
sws=0                           # use the fastest scaling algorithm
